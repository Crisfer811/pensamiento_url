#quinto plroblema
print ("problema No.5")
entrada5 = "Me gusta Python"
salida5 = entrada5.split()
palabras_invertidas = salida5[::-1]
oracion_invertida = ' '.join(palabras_invertidas)
print(entrada5)
print(oracion_invertida)



#quinto plroblema
print ("problema No.6")
entrada6 = input("ingrese la palabra alegria o tristeza: ")
minuscula = entrada6.lower()
if (minuscula == "tristeza" ):
    print ("No hay peor tristeza que recordar la felicidad en un día de dolor")
elif (minuscula == "alegria"):
    print ("La alegría de ver y entender es el más perfecto don de la naturaleza") 
else:
    print ("no cumple")
