saldo = 3000
intentos = 0
intentos_maximos = 3

while True:
    print("Saldo actual: Q",saldo)
    monto = int(input("Ingrese monto a retirar (o '0' para salir): "))

    if monto == 0:
        print("Gracias por usar el cajero. Adi칩s.")
        break
    
    if monto <= 0:
        print("Ingrese un monto v치lido.")
        continue
    
    if monto > saldo:
        intentos += 1
        total_intentos = intentos_maximos - intentos
        print("Saldo insuficiente. Intentos restantes: ", total_intentos )
        if intentos >= intentos_maximos:
            print("Demasiados intentos fallidos. Operaci칩n cancelada.")
            break
    else:
        saldo -= monto
        print("Retiro exitoso. Nuevo saldo: Q",saldo)
        intentos = 0  

        if saldo == 0:
            print("Saldo agotado. Adi칩s.")
            break
